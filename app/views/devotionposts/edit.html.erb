<h1>Editing devotion post</h1>

<%= form_for @devotionpost do |f| %>
  <div class="field">
    <%= f.label :title %>(제목)<br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :address %>(주소)<br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :intro %>(본문 설명-개괄)<br />
    <%= f.text_area :intro %>
  </div>
  <div class="field">
    <%= f.label :content %>(의미)<br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :application %>(적용)<br />
    <%= f.text_area :application %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>